{
  "name": "localsharer",
  "version": "1.0.0",
  "description": "Share files between devices in the same network",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electronmon .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.developerpalakbasak.localsharer",
    "productName": "Local Sharer",
    "directories": {
      "output": "release"
    },
    "files": [
      "**/*",
      "!**/*.map",
      "!**/*.test.js",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Network",
      "maintainer": "Palak Basak <developerpalakbasak@gmail.com>",
      "description": "Share files between devices in the same network",
      "synopsis": "Local file sharing application"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Local Sharer"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "get-port": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "network": "^0.6.1",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.2"
  },
  "author": {
    "name": "Palak Basak",
    "email": "developerpalakbasak@gmail.com",
    "website": "https://developerpalakbasak.vercel.app"
  },
  "homepage": "https://github.com/developerpalakbasak/local-sharer",
  "license": "MIT"
}
